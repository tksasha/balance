package itemcomponents

import (
	"github.com/tksasha/balance/internal/decorators"
	h "github.com/tksasha/balance/internal/helpers"
)

templ Row(item *decorators.ItemDecorator, rerender bool) {
	<tr
		id={ h.ItemID(item) }
		if rerender {
			hx-swap-oob="true"
		}
	>
		<td class="text-center">
			{ item.Date }
		</td>
		<td class="text-end">
			<a
				href={ h.EditItemURL(item) }
				hx-get={ string(h.EditItemURL(item)) }
				hx-target="#popup .modal-content"
				data-bs-toggle="modal"
				data-bs-target="#popup"
			>
				{ item.Sum }
			</a>
		</td>
		<td>
			{ item.CategoryName }
		</td>
		<td>
			{ item.Description }
		</td>
	</tr>
}
